<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:clickable="true"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:padding="2dp">

            <ImageView
                android:id="@+id/imgAuthorIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person_black_24dp" />

            <TextView
                android:id="@+id/txtAuthorName"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/imgAuthorIcon"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:text="Heaton Lin" />

            <TextView
                android:id="@+id/txtPubTime"
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_below="@id/txtAuthorName"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/imgAuthorIcon"
                android:textColor="@color/secondary_text"
                android:textSize="7sp"
                tools:text="2016/04/08" />

            <ImageView
                android:id="@+id/imgFavorite"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_star_border_black_24dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:textColor="@color/secondary_text"
            tools:text="Do your mother know what you do in front of computer?" />

        <ImageView
            android:id="@+id/imgMain"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="fitXY"
            android:src="@mipmap/handsup" />

        <LinearLayout
            android:id="@+id/lLayoutOptionArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/option3type"
                layout="@layout/include_item_3_option"></include>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:padding="2dp">

            <ImageView
                android:id="@+id/imgDataCount"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_timeline_black_24dp" />

            <TextView
                android:id="@+id/txtCount"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/imgDataCount"
                android:textSize="18sp"
                tools:text="100" />

            <ImageView
                android:id="@+id/imgShare"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@id/txtCount"
                android:src="@drawable/ic_share_black_24dp" />

            <TextView
                android:id="@+id/txtShareCount"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/imgShare"
                android:textSize="18sp"
                tools:text="0" />
        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>