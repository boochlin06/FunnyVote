<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginStart="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:padding="2dp">

        <TextView
            android:id="@+id/txtOptionNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textColor="@color/secondary_text"
            tools:text="1"
            android:gravity="center"
            android:background="@drawable/bg_oval_with_gradient"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imgChoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_radio_button_checked_black_24dp"
            android:contentDescription=""
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:id="@+id/txtOptionContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:textColor="@color/secondary_text"
            tools:text="Yes, i have tell my mother"
            android:gravity="center_vertical"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/imgChoice"
            android:layout_toRightOf="@id/txtOptionNumber"
            />


    </RelativeLayout>


</android.support.v7.widget.CardView>