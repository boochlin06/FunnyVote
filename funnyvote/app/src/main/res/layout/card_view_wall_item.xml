<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:clickable="true"
    app:cardCornerRadius="3dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:padding="2dp">

            <ImageView
                android:id="@+id/imgAuthorIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person_black_24dp" />

            <TextView
                android:id="@+id/txtAuthorName"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/imgAuthorIcon"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Heaton Lin" />

            <TextView
                android:id="@+id/txtPubTime"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_below="@id/txtAuthorName"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/imgAuthorIcon"
                android:textColor="@color/secondary_text"
                android:textSize="8sp"
                tools:text="2016/04/08" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:maxLines="5"
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/create_vote_settings_sub_topic_text_size"
            tools:text="Do your mother know what you do in front of computer?" />

        <ImageView
            android:id="@+id/imgMain"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/handsup" />

        <include
            android:id="@+id/function_bar"
            layout="@layout/include_function_bar" />

        <LinearLayout
            android:id="@+id/btnFirstOption"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/txtOptionNumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/bg_oval_with_gradient"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/md_red_50"
                android:textSize="16sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgFirstOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/txtFirstOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="option 1" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnSecondOption"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/txtOptionNumber2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/bg_oval_with_gradient"
                android:gravity="center"
                android:text="2"
                android:textColor="@color/md_red_50"
                android:textSize="16sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgSecondOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:scaleType="fitCenter"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtSecondOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="option 2" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnThirdOption"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:id="@+id/txtOptionNumber3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:background="@drawable/bg_oval_with_gradient"
                android:gravity="center"
                android:text=">"
                android:textColor="@color/md_red_50"
                android:textSize="16sp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imgThirdOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:scaleType="fitCenter"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txtThirdOption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="more ..." />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>